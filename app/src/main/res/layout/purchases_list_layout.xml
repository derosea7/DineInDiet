<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">


    <TextView
        android:id="@+id/tvPurchaseLayout_FoodName"
        android:text="Food Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        />

    <ImageView
        android:id="@+id/ivPurchaseLayout_Place"
        android:src="@drawable/ic_store_mall_directory_black_24dp"
        style="@style/IcPurchListPlace"
        android:layout_below="@id/tvPurchaseLayout_FoodName"
        android:paddingTop="10dp"
        />

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/tvPurchaseLayout_Place"
        android:text="Place Of Purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPurchaseLayout_FoodName"
        android:layout_toRightOf="@id/ivPurchaseLayout_Place"
        android:layout_alignBottom="@id/ivPurchaseLayout_Place"
        android:gravity="center_vertical"
        />



    <ImageView
        android:id="@+id/ivPurchaseLayout_Cost"
        android:src="@drawable/ic_attach_money_black_24dp"
        style="@style/IcPurchListCost"
        android:layout_below="@id/ivPurchaseLayout_Place"
        />

    <TextView
        android:id="@+id/tvPurchaseLayout_Cost"
        android:text="Cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPurchaseLayout_Place"
        android:layout_toRightOf="@id/ivPurchaseLayout_Cost"
        android:layout_alignBottom="@id/ivPurchaseLayout_Cost"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <!-- Start of Left Column -->

    <TextView
        android:id="@+id/lblPurchaseLayout_ServingSizeUnits"
        android:text="g/oz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvPurchaseLayout_FoodName"
        />

    <TextView
        android:id="@+id/tvPurchaseLayout_ServingSize"
        android:text="Serving Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/lblPurchaseLayout_ServingSizeUnits"
        android:layout_below="@id/tvPurchaseLayout_FoodName"
        />

    <TextView
        android:id="@+id/lblPurchaseLayout_ServingSize"
        android:text="Serving Size: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPurchaseLayout_FoodName"
        android:layout_toLeftOf="@id/tvPurchaseLayout_ServingSize"
        android:textColor="@android:color/black"

        />

    <TextView
        android:id="@+id/tvPurchaseLayout_Servings"
        android:text="Servings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvPurchaseLayout_ServingSize"
        />

    <TextView
        android:id="@+id/lblPurchaseLayout_Servings"
        android:text="Servings "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPurchaseLayout_ServingSize"
        android:layout_toLeftOf="@id/tvPurchaseLayout_Servings"
        android:textColor="@android:color/black"

        />

    <!-- Total Fat -->

    <TextView
        android:id="@+id/lblPurchaseLayout_TotalFatUnits"
        android:text="g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvPurchaseLayout_Servings"
        />

    <TextView
        android:id="@+id/tvPurchaseLayout_TotalFat"
        android:text="Total Fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPurchaseLayout_Servings"
        android:layout_toLeftOf="@id/lblPurchaseLayout_TotalFatUnits"
        />

    <TextView
        android:id="@+id/lblPurchaseLayout_TotalFat"
        android:text="Total Fat "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPurchaseLayout_Servings"
        android:layout_toLeftOf="@id/tvPurchaseLayout_TotalFat"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        />

    <!-- Total Carbs -->

    <TextView
        android:id="@+id/lblPurchaseLayout_TotalCarbsUnits"
        android:text="g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvPurchaseLayout_TotalFat"
        />

    <TextView
        android:id="@+id/tvPurchaseLayout_TotalCarbs"
        android:text="Total Fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPurchaseLayout_TotalFat"
        android:layout_toLeftOf="@id/lblPurchaseLayout_TotalCarbsUnits"
        />

    <TextView
        android:id="@+id/lblPurchaseLayout_TotalCarbs"
        android:text="Total Carbs "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPurchaseLayout_TotalFat"
        android:layout_toLeftOf="@id/tvPurchaseLayout_TotalCarbs"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        />

    <!-- Protein -->

    <TextView
        android:id="@+id/lblPurchaseLayout_ProteinUnits"
        android:text="g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvPurchaseLayout_TotalCarbs"
        />

    <TextView
        android:id="@+id/tvPurchaseLayout_Protein"
        android:text="Protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPurchaseLayout_TotalCarbs"
        android:layout_toLeftOf="@id/lblPurchaseLayout_ProteinUnits"
        />

    <TextView
        android:id="@+id/lblPurchaseLayout_Protein"
        android:text="Protein "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPurchaseLayout_TotalCarbs"
        android:layout_toLeftOf="@id/tvPurchaseLayout_Protein"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        />

</RelativeLayout>