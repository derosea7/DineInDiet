<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextRegularNutritionFacts">

        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="TextBoldNutrtionFacts" parent="TextRegularNutritionFacts">

        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentStart" tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:layout_alignParentLeft">true</item>

    </style>

    <style name="EditTextRegularNutritionFacts">

        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">4dp</item>

    </style>

    <style name="DividerBasic">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin</item>
        <item name="android:background">@drawable/list_divider</item>

    </style>

    <style name="DividerBlack">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin</item>
        <item name="android:background">@drawable/list_divider_black</item>

    </style>

    <style name="DividerBlack.Thick" parent="DividerBlack">

        <item name="android:layout_height">15px</item>

    </style>

    <!-- Styles for logging consumption -->

    <style name="ConsumptionTableRow">

        <item name="android:minHeight">@dimen/height_data_row</item>
        <item name="android:layout_height">@dimen/height_data_row</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="ConsumptionRowDivider">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin</item>
        <item name="android:background">@drawable/list_divider</item>
        <item name="android:layout_span">10</item>

    </style>

    <style name="TextTable">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textSize">13sp</item>

    </style>

    <style name="ConsLeadColumnContent" parent="TextTable">

        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="ConsBodyContent" parent="TextTable">

        <item name="android:layout_gravity">center_vertical|right</item>

    </style>

    <style name="IconDetailsForm">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:alpha">0.87</item>

    </style>

    <style name="IconDetailsForm.FoodName" parent="IconDetailsForm">
        <item name="android:tint">#F44336</item>
    </style>

    <style name="IconDetailsForm.Place" parent="IconDetailsForm">
        <item name="android:tint">#9E9E9E</item>
    </style>


    <style name="IconDetailsForm.Date" parent="IconDetailsForm">
        <item name="android:tint">#303F9F</item>
    </style>

    <style name="IconDetailsForm.Cost" parent="IconDetailsForm">
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="ChevronBase">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:tint">@color/colorAccent</item>

    </style>

    <style name="ChevronBase.Left" parent="ChevronBase">

        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">16dp</item>

    </style>

    <style name="ChevronBase.Right" parent="ChevronBase">

        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">16dp</item>

    </style>
<!--    <item name="android:layout_height">30dp</item> -->
    <style name="buttonBarGold">

        <item name="android:background">@drawable/select_foodname_bckgrnd</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="IcPurchListPlace" parent="IconDetailsForm.Place">

        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart"
            tools:ignore="DuplicateDefinition"
            tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:paddingBottom">2dp</item>

    </style>

    <style name="IcPurchListDate" parent="IconDetailsForm.Date">

        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart"
            tools:ignore="DuplicateDefinition"
            tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:paddingBottom">2dp</item>

    </style>

    <style name="IcPurchListCost" parent="IconDetailsForm.Cost">

        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart"
            tools:ignore="DuplicateDefinition"
            tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:paddingBottom">2dp</item>

    </style>

    <style name="SeekBarGoals">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

</resources>
